<?php

if(isset($_POST['analyze'])){
    $age = $_POST['num'] ;
    

    if ($age >= 18) {
        echo "Valid to vote";
    } else {
        echo "not valid to vote";
    }
}

$total = 0;

    //pizza
    if (isset($_POST['pizza'])) {
        $price1 = 499;
        $food1 = "Pizza - ".$price1."<br>";
        $total = $total + $price1;
    } else {
        $food1 = NULL;
        $price1 = 0;
    }

    //chicken
    if (isset($_POST['chicken'])) {
        $price2 = 100;
        $food2 = "Chicken - ".$price2."<br>";
        $total = $total + $price2;
    } else {
        $food2 = NULL;
        $price2 = 0;
    }

    //spaghetti
    if (isset($_POST['spaghetti'])) {
        $price3 = 120;
        $food3 = "Spaghetti - ".$price3."<br>";
        $total = $total + $price3;
    } else {
        $food3 = NULL;
        $price3 = 0;
    }

    echo "<br>".$food1. $food2. $food3;
    echo "Total: ".$total;


?>
